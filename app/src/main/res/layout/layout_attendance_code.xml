<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/center_dialog_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_title_dialog"
            android:gravity="center"
            android:padding="12dp"
            android:text="Mã Điểm Danh"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:src="@drawable/ic_close"></ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/txtCodeAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:background="@drawable/boder_code"
            android:enabled="false"
            android:gravity="center"
            android:inputType="text"
            android:padding="12dp"
            android:text="mã điểm danh"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/btnSwapCode"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/background_tham_gia"
                android:gravity="center"
                android:text="Đổi mã"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCancelAttendance"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_tham_gia"
                android:gravity="center"
                android:text="kết thúc"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>