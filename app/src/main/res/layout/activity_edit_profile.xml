<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfileActivity">


    <ImageView
        android:id="@+id/imgEditProfile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/orange" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:paddingTop="17dp"
        android:src="@drawable/general_back_icon"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgEditProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="15dp"
        android:text="Chỉnh Sửa Thông Tin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgEditProfile"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Sửa các thông tin của bạn vào ô bên dưới"
        android:textColor="#0B5345"
        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEditProfile"
        android:layout_margin="10dp"
        android:layout_marginTop="23dp"
        android:hint="Gmail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editGmail"
        android:layout_margin="10dp"
        android:hint="Số điện thoại"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPhoneNumber"
        android:layout_margin="10dp"
        android:text="Sửa Thông Tin"
        android:textAllCaps="false" />

</RelativeLayout>

