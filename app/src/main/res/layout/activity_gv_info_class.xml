<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GV_InfoClassActivity">

    <ImageView
        android:id="@+id/img_ThongTinKhoaHoc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/orange" />

    <ImageView
        android:id="@+id/imgBack1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:paddingTop="17dp"
        android:src="@drawable/general_back_icon"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_ThongTinKhoaHoc"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="15dp"
        android:text="Chi Tiết Lớp Học"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtV0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_ThongTinKhoaHoc"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Tên Giảng Viên:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_tenGiangVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_ThongTinKhoaHoc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/txtV7"
        android:text="Tên Giảng Viên"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Tên Môn Học:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_tenMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tenGiangVien"
        android:layout_marginStart="-11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/txtV0"
        android:text="Tên Môn Học"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Phòng:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_Phong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tenMonHoc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/txtV3"
        android:text="Phòng"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Tổng Sinh Viên Của Lớp:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_TongSoSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Phong"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/txtV4"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtV6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Ngày Bắt Đầu:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ngayBatDau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_TongSoSV"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/txtV6"
        android:text="00/00/0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtV7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Ngày Kết Thúc:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ngayKetThuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ngayBatDau"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/txtV7"
        android:text="00/00/0000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnEveryone"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ngayKetThuc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="115dp"
        android:background="@drawable/drawable_bg"
        android:text="mọi người"
        android:textSize="20sp"
        android:textStyle="bold"></Button>

</RelativeLayout>



